<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText android:id="@+id/title_edit" style="@style/Widget.AppCompat.EditText"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:minHeight="40dp"/>
    <EditText android:id="@+id/content_edit" style="@style/Widget.AppCompat.EditText"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:gravity="top|left" android:minHeight="240dp"/>
    <Button android:id="@+id/save_btn" android:layout_width="120dp" android:layout_height="48dp"
            android:layout_gravity="center_horizontal" android:text="保存"/>
</LinearLayout>